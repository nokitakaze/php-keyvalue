<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" strict="true"
         timeoutForSmallTests="15"
         timeoutForMediumTests="60"
         timeoutForLargeTests="600">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <file>../src/AbstractStorage.php</file>
            <file>../src/FileStorage.php</file>
            <file>../src/KeyValueStorage.php</file>
            <file>../src/RedisStorage.php</file>
        </whitelist>
        <blacklist>
            <directory suffix=".php">../vendor</directory>
            <file>../src/phpdoc.php</file>
        </blacklist>
    </filter>
</phpunit>